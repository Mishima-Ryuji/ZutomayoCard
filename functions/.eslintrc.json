{
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["import"],
  "extends": [
    "../.eslintrc.json",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": "off",
    "valid-jsdoc": "off"
  },
  "ignorePatterns": [
    "/lib/**/*" // Ignore built files.
  ]
}
