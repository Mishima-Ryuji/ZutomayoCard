{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
